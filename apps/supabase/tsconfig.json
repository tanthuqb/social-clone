{
  "extends": "@suzu/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "esnext",
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./src/lib/supabase/database.types.ts"]
  },
  "include": [
    "next-env.d.ts",
    "./src/types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "src/app/(app)/(inside)/settings/language",
    "src/app/(app)/(inside)/settings/supportettings/support",
    "../../packages/ui/src/components/ui/base-badges.tsx",
    "../../packages/ui/src/components/ui/bgd_commonBadges.tsx"
  ],
  "exclude": ["node_modules"]
}
